{
  "name": "orae-app",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "description": "Aplicativo católico Orae — santos, orações, comunidade e planos espirituais.",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@react-navigation/native": "^6.1.8",
    "@react-navigation/stack": "^6.3.20",
    "expo": "^51.0.0",
    "expo-router": "^3.5.0",
    "expo-status-bar": "~2.0.0",
    "firebase": "^10.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.0",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "4.9.0",
    "react-native-screens": "~3.29.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.73.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": ["expo", "prettier"],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-unused-vars": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "printWidth": 100
  },
  "expo": {
    "name": "Orae",
    "slug": "orae",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "scheme": "orae",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "extra": {
      "routerRoot": "src", 
      "eas": {
        "projectId": "replace-this-with-your-expo-project-id"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/replace-this-with-your-update-url"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "platforms": ["android", "ios", "web"]
  }
}

